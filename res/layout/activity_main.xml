<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.example.paymentbuttondemo"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="102dp"
        android:background="#ff0000" >

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:button="@drawable/btn_radio_payment"
            android:drawableLeft="@drawable/ic_payment"
            android:paddingLeft="200dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="102dp"
        android:layout_marginTop="102dp"
        android:background="#00ff00" >

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.example.paymentbuttondemo.PaymentButton
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="20dp"
                app:button="@drawable/btn_radio_payment"
                app:buttonHeight="30dp"
                app:buttonPaddingLeft="10dp"
                app:buttonWidth="30dp"
                app:checked="false"
                app:drawable="@drawable/ic_payment"
                app:drawableHeight="40dp"
                app:drawablePadding="50dp"
                app:drawableWidth="60dp" />

            <com.example.paymentbuttondemo.PaymentButton
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="20dp"
                app:button="@drawable/btn_radio_payment"
                app:buttonHeight="30dp"
                app:buttonPaddingLeft="10dp"
                app:buttonWidth="30dp"
                app:checked="false"
                app:drawable="@drawable/ic_payment"
                app:drawableHeight="40dp"
                app:drawablePadding="50dp"
                app:drawableWidth="60dp" />
        </RadioGroup>
    </FrameLayout>

</RelativeLayout>